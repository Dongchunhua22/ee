<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">


    <ImageView
        android:id="@+id/search_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/common_back_icon"
        android:layout_width="9dp"
        android:layout_height="16dp"/>

    <EditText
        android:id="@+id/search_edit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="12dp"
        android:paddingLeft="10dp"
        android:textSize="8sp"
        android:hint="请输入关键字"
        android:paddingTop="10dp"
        android:drawableLeft="@drawable/public_ic_search"
        android:layout_width="290dp"
        android:layout_height="30dp"/>

    <TextView
        android:id="@+id/search_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="332dp"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="搜索"
        android:layout_width="36dp"
        android:layout_height="17dp"/>

    <TextView
        android:layout_marginTop="75dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#000000"
        android:text="历史搜索"
        android:layout_width="59dp"
        android:layout_height="15dp"/>

    <ImageView
        android:id="@+id/search_clear"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="72dp"
        android:layout_marginLeft="337dp"
        android:background="@drawable/course_ic_learn_del"
        android:layout_width="13dp"
        android:layout_height="12dp"/>

    <com.jiyun.meishi.FlowLayout
        android:id="@+id/search_flow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="110dp"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_recy"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="110dp"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>